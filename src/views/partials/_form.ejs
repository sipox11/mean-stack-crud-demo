<!-- Form -->
<div class="card">
    <div class="card-body">
        <h5 class="card-title">
            <%= formTitle %>
        </h5>
        <form action="<%= formAction %>" method="POST">
            <div class="form-group">
                <input type="text" name="title" value="<%= task !== undefined && task !== null ? task.title : "" %>" placeholder="Enter title" class="form-control" autofocus>
            </div>
            <div class="form-group">
                <textarea name="description" cols="80" class="form-control" placeholder="Enter description">
                        <%= task !== undefined && task !== null ? task.description : "" %>
                </textarea>
            </div>
            <button type="submit" class="btn btn-primary btn-block">
                <%= formSubmitText %>
            </button>
        </form>
    </div>
</div>